  type: git
  location: https://github.com/githubuser/simple-ci

common options
  build-depends:
    , aeson
    , async
    , base
    , butcher
    , generic-lens
    , hslogger
    , http-client
    , http-conduit
    , http-types
    , lens
    , network
    , record-hasfield
    , rio
    , scotty
    , serialise
    , stm
    , time
    , typed-process
    , wai-cors
    , yaml
