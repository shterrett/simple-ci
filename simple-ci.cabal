  import: options
  exposed-modules:
      Lib
  other-modules:
      Paths_simple_ci
  hs-source-dirs:
      src
  default-language: Haskell2010

executable simple-ci-server
  import: options
  main-is: Main.hs
  other-modules:
      Paths_simple_ci
  hs-source-dirs:
      app
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
    , simple-ci
  default-language: Haskell2010

test-suite simple-ci-test
  import: options
  type: exitcode-stdio-1.0
